<Window x:Class="TheBudgetStationery.View.UserControls.NewTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheBudgetStationery.View.UserControls"
        mc:Ignorable="d" WindowStyle="None"
        Title="NewTransactionWindow" Height="200" Width="300">
    
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock Text="New Transaction" FontSize="27" Margin="3" FontWeight="Bold"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Button Name="btnAddMoney" Margin="5, 10, 5, 10" Content="Add Money" FontSize="18"  Click="btnAddMoney_Click"/>
            </Grid>

            <Grid Grid.Column="1">
                <Button Name="btnRemoveMoney" Margin="5, 10, 5, 10" Content="Remove Money" FontSize="18"  Click="btnRemoveMoney_Click"/>
            </Grid>

        </Grid>

        <Grid Grid.Row="2">
            <!-- TODO: Add "Enter Amount" text entry box here-->
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <!-- Col 0 is just for spacing -->
        <!-- TODO: Col 1 is for "Cancel" button -->
        <!-- TODO: Col 2 is for "Enter" button -->

    </Grid>
</Window>
