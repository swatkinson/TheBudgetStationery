<UserControl x:Class="TheBudgetStationery.View.UserControls.Envelope"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheBudgetStationery.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="700">

    <Border BorderBrush="Black" BorderThickness="0" Padding="6" Margin="4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="50*"/>
            </Grid.ColumnDefinitions>

            <!-- COL 0 -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- COL 0, ROW 0 -->
                <Viewbox Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <TextBlock Name="tbEnvelopeName" Text="{Binding Name}" Margin="0,0,0,1"/>
                </Viewbox>

                <!-- COL 0, ROW 1 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Name="btnRemove" Grid.Column="0" Margin="3" Content="-"    FontSize="20" FontWeight="Bold" Click="btnRemove_Click"/>
                    <Button Name="btnAdd"    Grid.Column="1" Margin="3" Content="+"    FontSize="20" FontWeight="Bold" Click="btnAdd_Click"/>
                    <Button Name="btnEdit"   Grid.Column="2" Margin="3" Content="Edit" FontSize="20" FontWeight="Bold" Click="btnEdit_Click"/>
         
                </Grid>
            </Grid>
            
            <!-- COL 1 -->

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <!-- COL 1, COL 0 -->
                <TextBlock Name="tbBalance" Text="{Binding Balance, StringFormat=C}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" />

                <!-- COL 1, COL 1 -->
                <TextBlock Grid.Column="1" Text="|" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Margin="0,0,0,10"/>

                <!-- COL 1, COL 2 -->
                <Viewbox Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Name="tbCountdown" Text="{Binding CountdownText}" FontSize="25" Foreground="DarkGray" Margin="5,0,0,0"/>
                </Viewbox>


            </Grid>
           
                        
        </Grid>
    </Border>
</UserControl>
